<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Script file="FarmBuddy.lua"/>

  <!-- Template for a tracked item -->
  <Frame name="FarmBuddyItemTemplate" virtual="true">
    <Size>
      <AbsDimension x="36" y="31" />
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="16" />
        </Offset>
      </Anchor>
    </Anchors>
    <Layers>
      <Layer level="ARTWORK">
        <!-- Placeholder icon -->
        <Texture name="$parentTexture" parentKey="Texture" file="INTERFACE\ICONS\Inv_misc_coin_01">
          <Anchors>
            <Anchor point="CENTER">
              <Offset>
                <AbsDimension x="0" y="3" />
              </Offset>
            </Anchor>
          </Anchors>
          <Size>
            <AbsDimension x="28" y="28" />
          </Size>
        </Texture>
        <FontString name="$parentTitle" relativeTo="$parentTexture" inherits="GameFontNormal" parentKey="Title">
          <Anchors>
            <Anchor point="LEFT">
              <Offset x="36" y="11" />
            </Anchor>
          </Anchors>
          <Color r="255" g="255" b="255" a="1"/>
          <FontHeight val="12"/>
        </FontString>
        <FontString name="$parentSubline" relativeTo="$parentTitle" inherits="GameFontNormalSmall" parentKey="Subline">
          <Anchors>
            <Anchor point="LEFT">
              <Offset x="36" y="-3" />
            </Anchor>
          </Anchors>
          <Color r="255" g="216" b="0" a="1"/>
          <FontHeight val="12"/>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame name="FarmBuddyFrame" parent="UIParent" toplevel="true" enableMouse="false" movable="true" hidden="false">
    <Size x="320" y="156"/>
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>

    <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
      <Color r="0" g="0" b="0" a="0.3"/>
    </Backdrop>

    <Layers>
      <Layer level="BACKGROUND">
        <FontString name="$parentTitle" inherits="GameFontNormal" text="Farm Buddy" parentKey="Title">
          <Size x="320" y="20"/>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset x="5" y="16" />
            </Anchor>
            <Anchor point="TOPRIGHT">
              <Offset x="5" y="16" />
            </Anchor>
          </Anchors>
          <Color r="255" g="215" b="0" a="1"/>
          <FontHeight val="12"/>
        </FontString>
      </Layer>
    </Layers>

    <Scripts>
      <OnLoad>
          self:RegisterForDrag('LeftButton');
          self:SetUserPlaced(true);
      </OnLoad>
      <OnDragStart>
          self:StartMoving();
      </OnDragStart>
      <OnDragStop>
          self:StopMovingOrSizing();
      </OnDragStop>
    </Scripts>
  </Frame>
</Ui>
